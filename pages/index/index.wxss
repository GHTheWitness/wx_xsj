.banner {
  width: 100%;
  height: 295rpx;
}
.banner swiper {
  height: 100%;
  width: 100%;
}
.banner swiper image {
  width: 100%;
  height: 295rpx;
}
.major .majorCon {
  display: flex;
  padding: 20rpx 0;
}
.major .majorCon .box {
  text-align: center;
  width: 170rpx;
  flex: 0 0 auto;
}
.major .majorCon .box image {
  width: 100rpx;
  height: 100rpx;
}
.major .majorCon .box .txt {
  font-size: 26rpx;
}
.works {
  background: #f0f3f8;
  padding: 90rpx 0 70rpx;
}
.works .wkMain {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.works .wkMain .box {
  width: 344rpx;
  height: 214rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.works .wkMain .box .pic {
  width: 100%;
  height: 100%;
}
.works .wkMain .box .greyHover {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.works .wkMain .box .greyHover .title {
  font-size: 34rpx;
}
.works .wkMain .box .greyHover .line {
  width: 50rpx;
  height: 2rpx;
  background: rgba(255, 255, 255, 0.5);
  margin: 10rpx 0 20rpx;
}
.works .wkMain .box .greyHover .desc {
  opacity: 0.6;
  text-transform: uppercase;
  font-size: 24rpx;
  letter-spacing: 0.2em;
}
.dynamic {
  padding: 90rpx 0 70rpx;
}
.dynamic .dyItem {
  display: flex;
  padding: 15rpx 0;
  border: 1rpx dashed #eee;
  justify-content: space-between;
}
.dynamic .dyItem .pic {
  width: 230rpx;
  height: 150rpx;
}
.dynamic .dyItem .pic image {
  width: 100%;
  height: 150rpx;
}
.dynamic .dyItem .txt {
  width: 440rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.dynamic .dyItem .txt .title {
  font-size: 34rpx;
}
.dynamic .dyItem .txt .info {
  font-size: 26rpx;
}
.dynamic .dyItem .txt text {
  font-size: 22rpx;
}
